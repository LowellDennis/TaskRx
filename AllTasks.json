        },
        {
          "Id": "OpenSSH-Service",
          "Hidden": true,
          "Default": true,
          "Name": "Start OpenSSH Service",
          "Command": "powershell",
          "Arguments": "-WindowStyle Minimized -Command \"Start-Process powershell -WindowStyle Minimized -Verb RunAs -ArgumentList '-WindowStyle Minimized -Command Start-Service sshd'\""
        },
        {
          "Id": "OpenSSH-Auto",
          "Hidden": true,
          "Default": true,
          "Name": "Set OpenSSH to Start Automatically on Startup",
          "Command": "powershell",
          "Arguments": "-WindowStyle Minimized -Command \"Start-Process powershell -WindowStyle Minimized -Verb RunAs -ArgumentList '-WindowStyle Minimized -Command Set-Service -Name sshd -StartupType \\\"Automatic\\\"'\""
        }
