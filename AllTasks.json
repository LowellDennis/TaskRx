      "Group": "SSH",
      "Hidden": false,
      "Default": true,
      "Name": "OpenSSH",
      "Command": "powershell",
      "Arguments": "-WindowStyle Minimized -Command \"Start-Process powershell -WindowStyle Minimized -Verb RunAs -ArgumentList '-WindowStyle Minimized -Command Add-WindowsCapability -Online -Name OpenSSH.Server~~~~0.0.1.0'\"",
